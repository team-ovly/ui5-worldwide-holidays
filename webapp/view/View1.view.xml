<mvc:View controllerName="ovly.holidays.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:commons="sap.suite.ui.commons" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="Worldwide Holidays">
					<content>
						<form:SimpleForm layout="ResponsiveGridLayout" adjustLabelSpan="true" editable="true" labelSpanL="3" labelSpanM="3" emptySpanL="3" emptySpanM="3">
							<form:content>
								<Label text="Contry" />
								<Select forceSelection="false">
									<items>
										<core:Item key="BR" text="Brazil"/>
										<core:Item key="CA" text="Canada"/>
										<core:Item key="ES" text="Spain"/>
									</items>
								</Select>
								<Label text="Year"/>
								<DatePicker placeholder="Year" displayFormat="yyyy"/>
								<Label/>
								<Button text="Search" icon="sap-icon://search" press="onSearch"/>
							</form:content>
						</form:SimpleForm>
						<commons:Timeline showHeaderBar="false" alignment="Left">
							<commons:TimelineItem dateTime="2019-01-01" title="Title A" text="Text A" icon="sap-icon://date-time" />
							<commons:TimelineItem dateTime="2019-02-01" title="Title B" text="Text B" icon="sap-icon://date-time" />
							<commons:TimelineItem dateTime="2019-03-01" title="Title C" text="Text C" icon="sap-icon://date-time" />
							<commons:TimelineItem dateTime="2019-04-01" title="Title D" text="Text D" icon="sap-icon://date-time" />
							<commons:TimelineItem dateTime="2019-05-01" title="Title E" text="Text E" icon="sap-icon://date-time" />
							<commons:TimelineItem dateTime="2019-06-01" title="Title F" text="Text F" icon="sap-icon://date-time" />
						</commons:Timeline>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>